# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
APP_NAME="Sistema de Gestão Alimentar"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://gestor.emmvmfc.com.br

# ========================================
# BANCO DE DADOS
# ========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gestao_alimentar
DB_USERNAME=gestao_user
DB_PASSWORD=

# ========================================
# CONFIGURAÇÕES DE CACHE E SESSÃO
# ========================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@emmvmfc.com.br"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# CONFIGURAÇÕES DE TIMEZONE
# ========================================
APP_TIMEZONE=America/Sao_Paulo

# ========================================
# CONFIGURAÇÕES DE LOGS
# ========================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# Adicione suas chaves de API aqui (se necessário)
# EXEMPLO_API_KEY=
